
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is common for files like product images that need to be
    // displayed to all users.
    match /{allPaths=**} {
      allow read: if true;
      
      // Only allow writes (uploads, updates, deletes) for authenticated users.
      // This prevents anonymous users from uploading arbitrary files.
      // For more granular control, you could check for an admin role here,
      // similar to the Firestore rules.
      allow write: if request.auth != null;
    }
  }
}
